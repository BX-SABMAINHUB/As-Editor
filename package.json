{
  "name": "as-editor",
  "version": "1.1.0",
  "description": "AS-Editor PRO: Advanced Video Editing Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "DevAlex",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2"
  },
  "build": {
    "appId": "com.dev alex.as-editor",
    "productName": "AS-Editor PRO",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
